{
	"settings": {
		"namespace": "faq",
		"component": "faq/FAQWidget"
	},
	"schema": {
		"$schema": "http://json-schema.org/draft-04/schema#",
		"title": "FAQ",
		"description": "Displays FAQs",
		"type": "object",
		"properties": {
			"defaults": {
				"type": "object",
				"notes": "conifgurable generic base widget options.  can be tailored in cms",
				"properties": {
					"tilespan": {
						"title": "Tilespan",
						"type": "number",
						"notes": "defines the number of fixed single tile widths the widget should span",
						"enum": [1, 2, 3]
					},
					"title": {
						"title": "Title",
						"type": "string",
						"notes": "title to display on widget"
					}
				},
				"required": ["tilespan"]
			}
		}
	}
}
